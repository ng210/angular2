{
    "template": {
        "radius": {
            "type":"slider", "data-field": "radius", "label":true,
            "data-type":"float", "min": 0.1, "max": 1.0, "step": 0.1,
            "events": ["change"]
        },
        "zoom": {
            "type":"slider", "data-field": "zoom",
            "data-type":"float", "min": 0.0, "max": 2.0, "step": 0.1
        },
        "size": {
            "type":"slider", "data-field": "size",
            "data-type":"float", "min": 0.0, "max": 0.9, "step": 0.1,
            "events": ["change"]
        },
        "interpolation": {
            "type":"ddlist", "data-field": "interpolation", "label":true,
            "items": ["none", "linear", "sinusoid"],
            "events": ["change"]
        }
    },
    "settings": {
		"radius": 0.8,
		"zoom": 0.5,
		"interpolation": "sinusoid",
		"size": 0.5
    }
}